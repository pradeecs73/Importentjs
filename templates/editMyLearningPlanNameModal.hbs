

    <!-- Edit Learning Plan Modal -->
    <div class="modal fade" id="editMyLearningPlanNameModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title" id="myModalLabel">Edit Learning Plan</h4>
          </div>
          <div class="modal-body">
            <form action="#" method="POST" id="editLPForm">
              <fieldset>
                <div>
                  <label class="search-group" for="LPTitle">Edit a Learning Plan Name</label>
                  <input type="text" placeholder="Enter Learning Plan Name" class="text ui-widget-content ui-corner-all search-group form-control" id="learningPlanNameInEditMode" {{bindAttr  value=myLearningPlanToBeEditedContent.title}} name="title">
                </div>                
              </fieldset>
            </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            <button type="button" class="btn btn-primary" {{action editMyLearningPlanName   myLearningPlanToBeEditedContent._id  on="click"}}>Update</button>
          </div>
        </div>
        <!-- /.modal-content -->
      </div>
      <!-- /.modal-dialog -->
    </div>
    <!-- /. Edit Learning Plan modal -->