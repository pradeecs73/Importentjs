                    </div>
                    <!-- /widget-box -->


                    <!-- Recommendations -->
                    {{#if isCurrentUser}}
                        {{#if approvedRecommendations}}
                            <div class="widget-box profile-section-recommendations" id="recommendations">
                                <div class="widget-header widget-padding bborder row-header">
                                    <h4 class="widget-header-title" data-icon-before="file-thumbs-up">
                                        Recommendations</h4>

                                    <div class="widget-toolbar hide">
                                        <a href="#" class="edit-save-buttons edit-recommendations">
                                            <img class="save-button" src="assets/images/save-button.png" alt="Save"/>
                                            <button class="btn edit-button" data-icon-before="pencil-thick"
                                                    alt="Edit"></button>
                                        </a>
                                        <a class="btn"
                                           data-toggle="collapse"
                                           href="#recommendations-current-user-inner"
                                           aria-expanded="true"
                                           aria-controls="recommendations-current-user-inner"></a>
                                    </div>
                                </div>
                                <div class="widget-body">
                                    <div class="widget-body-inner collapse in" id="recommendations-current-user-inner"
                                         aria-expanded="true">
                                        <div class="widget-main container">
                                            {{#each recommendation in approvedRecommendations}}
                                                <div class="row user-existing-recd padding-12">
                                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 user-recd-person">
                                                        <div class="profile-image-wrap">
                                                            {{avatarCommunityImgWithGivenUrl recommendation.recommendedByShortName recommendation.recommendedBy recommendation.recommendedByImageUrl}}
                                                            {{!--<img src="assets/avatars/user1.png" alt="" class="nav-user-photo" />--}}
                                                            <span class="user-profile-status">
                                          {{#if recommendation.recommendedByJabberInfo}}
                                              {{render "jabberStatusPill" recommendation.recommendedByJabberInfo}}
                                          {{/if}}
                                                                <i class="icon-caret-down icon-only leftmove"></i>
                                      </span>
                                      <span class="user-profile-text">
                                          <span class="user-profile-name">{{profileLink recommendation.recommendedByShortName recommendation.recommendedBy}}</span>
                                          <span class="user-profile-email eclipse-text">{{recommendation.recommendedBy}}</span>
                                          <span class="user-recd-date-likes">{{formatDate recommendation.recommendedOn "MMM DD, YYYY"}}
                                              <i class="icon-thumbs-up hide"></i> <span
                                                      class="like-count hide">26</span></span>
                                      </span>
                                                        </div>
                                                        <div class="user-recd-text">
                                                            <div class="inner-recd-text">
                                                                <i class="icon-caret-left"></i>

                                                                <p>{{recommendation.message}}</p>
                                                            </div>
                                                            <div class="inner-approval hide">
                                                                <i class="icon-remove"></i>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            {{/each}}
                                        </div>
                                        <!-- /widget-main -->
                                    </div>
                                </div>
                                <!-- /widget-body -->
                            </div>
                            <!-- /widget-box -->
                        {{/if}}

