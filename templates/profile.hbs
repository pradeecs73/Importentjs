                    {{else}}
                        <div class="widget-box profile-section-recommendations" id="recommendations">
                            <div class="widget-header widget-padding bborder row-header">
                                <h4 class="widget-header-title" data-icon-before="file-thumbs-up"> Recommendations</h4>

                                <div class="widget-toolbar">
                                    <a class="btn"
                                       data-toggle="collapse"
                                       href="#recommendations-other-user-inner"
                                       aria-expanded="true"
                                       aria-controls="recommendations-other-user-inner"></a>
                                </div>
                            </div>
                            <div class="widget-body">
                                <div class="widget-body-inner collapse in" id="recommendations-other-user-inner"
                                     aria-expanded="true">
