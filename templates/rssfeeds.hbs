                        </div>
                        <div class="col-lg-8 col-md-7 col-sm-8 col-xs-6">
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 search-add-wrap">
                    <div class="row">
                        <div class="col-lg-10 col-md-10 col-sm-10 col-xs-10">
                        </div>
                        <span {{bind-attr class=":pull-right newPath:active"}}> 
                            <span class=""> 
                                <i data-rel="tooltip" data-original-title="Add a RSS Feed" data-placement="left" {{action 'openCreateRssfeedModal'}} data-icon-before="plus-thin" class="btn"></i>
                            </span> 
                        </span>                        
                    </div>
                </div>
            </div>
        </div>

        <div class="rss-feeds js-rss-feeds-names result-closed">
            <div class="rss-feed-container">
                <div class="rss-feed-title">
                    <ul class="rss-publisher" id="myTab3">
                        {{#each}}
                            {{#link-to 'rssfeedItems' _id tagName="li" class="js-rss-feed-link js-accordion-closed"}}
                                <a data-toggle="tab" {{bind-attr title='name'}}>
                                    <i class="icon-chevron-right js-direction-icon"></i>{{name}}
