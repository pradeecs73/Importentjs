<div {{bindAttr class=":widget-container nofeeds:show:hide"}} id="rss-feed-box">
    <div class="header-panel">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <h1>RSS Feeds</h1>
            </div>
        </div>
    </div>
    <div class="text-center centered center">
        <div style="width: 291px; border-bottom: 1px solid #ccc; margin:50px auto 10px;">
            <i class="icon-rss" style="font-size: 152px;"></i><br>
            <h4>No Feeds available</h4>
            <span class="help-block">Please enter new feed</span>
        </div>
        <button id="id-btn-dialog2" class="btn btn-primary" {{action 'openCreateRssfeedModal'}}>Add New Feed
        </button>
    </div>
</div>
