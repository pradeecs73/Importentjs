<div class="modal file-upload-modal profile-image-modal fade in" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" id="profileImageUpload">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header learningplanblue-header modal-create-header clearfix">
                <button type="button" class="close font-25" data-dismiss="modal" {{action closeProfileImageUploadModal}}>
                    <i class="icon-remove white"></i>
                </button>
                <h4 class="modal-title"> {{modalTitle}}</h4>
            </div>
            {{#if fileMessage }}
                <div class="modal-result-message page-padding padding-bottom-10">
                    {{#if fileMessage.error}}
                        <div class="file-upload-error">
                            <p>{{fileMessage.error}}</p>
                        </div>
                        <div class="modal-footer file-upload-error">
                            <button type="button" class="btn btn-primary" data-dismiss="modal" {{action closeProfileImageUploadModal}}>Cancel</button>
                            <button type="button" class="btn btn-primary" id="fileTryAgain" {{action tryAgain}}>Try Again</button>
                        </div>
                    {{/if}}
                    {{#if fileMessage.success}}
                        <div class="file-upload-success">
                            <p>{{fileMessage.success}}</p>
                        </div>
                        <div class="modal-footer file-upload-success">
                            <button type="button" class="btn btn-primary" data-dismiss="modal" {{action closeProfileImageUploadModal}}>Done</button>
                        </div>
                    {{/if}}
                </div>
            {{else}}
                <div class="modal-body page-padding padding-bottom-10">
                    {{#if uploading}}
                        <div class="progress progress-striped active">
                            <div class="progress-bar" role="progressbar" aria-valuenow="100" aria-valuemin="0"
                                 aria-valuemax="100" style="width: 100%;">
                            </div>
                        </div>
                    {{/if}}
                    <fieldset>
                        <div class="row clearfix">
                            <div class="col-sm-12 col-xs-12">
                                {{file-chooser allowedFileTypes=allowedFileTypes name="file" reset=reset maxFileSizeInMB=2 action='showFileErrors' selectionCancelAction='selectionErrors' disableClick=disableClick}}
                                {{#if errors}}
                                    <span class="error">{{errors}}</span>
                                {{/if}}
                            </div>
                        </div>
                        <div class="row scale-crop-wrapper clearfix">

                            <div class="col-sm-12 col-xs-12">

                                <p data-icon-before="crop" class="instruction">Scale and/or position your Photo:</p>
                            
                                <div id="profileImagePreviewContainer" class="profile-preview-container" style="position: relative">
                                    <img id="profileImage" class="img-responsive profileImg" {{bind-attr src=profileImageSrc}}>
                                </div>

                            </div>
                        </div>
                    </fieldset>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" data-dismiss="modal" {{bind-attr class=disableClick}} {{action closeProfileImageUploadModal}}>Cancel</button>
                        <button type="submit" class="btn btn-primary" {{bind-attr class=disableClick}} {{action uploadFile}}>Ok</button>
                    </div>
                </div>
            {{/if}}
        </div>
    </div>
</div>
