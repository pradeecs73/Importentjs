<div id="user-activity" class="page-content user-profile-page">
  	<div class="widget-body list-with-tags" id="profile-layout">
	    <div class="container header-panel">
	        <div class="row">
	            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
	                <h1 class="eclipse-text">My Activities</h1>
	            </div>
	        </div>
	    </div>
		<div class="tabbable">
			<ul class="nav nav-tabs padding-left-18 tab-size-bigger" id="myTab">
				<li >
					{{#link-to "profile.my" data-toggle="tab" data-target="#profile"}}
					Profile {{/link-to}}
				</li>
				<li class="active">
					{{#link-to "profile.myactivity" data-toggle="tab" data-target="#activity"}}
					My Activities {{/link-to}}
				</li>
    {{#if preferences.FormalLearning}}
				<li>
				  {{#link-to "profile.myrecentlearnings" data-toggle="tab" data-target="#rl"}}
				  Recent Learnings {{/link-to}}
				</li>
				<li>
				  {{#link-to "profile.myprescribedlearningplans" data-toggle="tab" data-target="#plp"}}
				  Prescribed Learning Plans {{/link-to}}
				</li>
    {{/if}}
				<li>
		          {{#link-to "profile.activitysettings" data-toggle="tab" data-target="#notificationsSettings"}}
		          Activity Stream Preferences  {{/link-to}}
		        </li>
			</ul>
			<div class="tab-content profile-activity-tab">
				<div id="activity" class="tab-pane in active" >
					<div class="page-content list-grid-page activityStream no-padding">
							<div class="searchCatalogCustom clearfix">
								<div id="successMessageDiv" class="alert alert-block alert-success hide">
									<button type="button" class="close" data-dismiss="alert">
										<i class="icon-remove"></i>
									</button>
									<p><i class="icon-ok"></i> message</p>
								</div>
							    <div class="filters-panel first-panel has-sorting">				            
					                <div class="col-lg-7 col-md-7 col-sm-6 col-xs-12">
					                    <div class="row">
					                        <div class="col-lg-12 col-md-9 col-sm-10 col-xs-12">
					                            {{!-- {{visual-search componentId='fileCatalogFilterBox' facets=allFacets filters=filters searchAction='filter' placeHolderText='Filter by Type'}} --}}
												<div id="activityStreamView"></div>
					                        </div>
					                    </div>
					                </div>

                                <div class="col-lg-5 col-md-5 col-sm-6 col-xs-12 search-add-wrap">
                                    <div class="row">
                                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 form-wrap">
                                            <div class="form-search">
                                                <i class="icon-search" {{action 'search'}}></i>

                                                {{input value=filter  class="form-control" placeholder="Search activities"}}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{#each formattedActivities }}
                            <div class="widget-box no-border profile-activity-stream">
                                <div class="widget-header widget-padding bborder row-header">
                                    <h4 class="widget-header-title" data-icon-before="book">{{this.dateKey}}</h4>

                                    <div class="widget-toolbar">
                                        <a {{bindAttr href="url"}} {{action "reload" on='click'}} data-action="reload">
                                            <i class="icon-refresh" data-rel="tooltip"
                                               style="cursor: pointer; position: relative;"
                                               data-original-title="Refresh"></i> </a> &nbsp;
                                        <a href="#" data-action="collapse"> <i class="icon-caret-down"></i></a>
                                    </div>
                                </div>
                                <div class="widget-body">
                                    <div class="widget-body-inner" style="display: block;">
                                        <div class="widget-main">

                                            <table class="table table-striped table-striped-lines-only no-top-border">
                                                {{#each activity in myRecentActivities}}
                                                    <tr>
                                                        <td>
                                                            <div class="activity-item-description">
                                                                <div class="body">
                                                                    {{unbound formActivityStreamDisplayTitle activity.title activity.object.displayName  activity.activity.object.url activity.object.objectType activity.object.id activity.actor.id  activity.actor.displayName}}
                                                                </div>
                                                            </div>
                                                            <div class="activity-item-name">
                                                                {{#if activity.ellipsisedContent}}
                                                                    {{removeHTMLTagsForEllipsisDisplay activity.ellipsisedContent}}
                                                                {{/if}}
                                                            </div>
                                                        </td>
                                                        <td class="activity-data-grid">
														<span class="widget-toolbar no-border blue">
															<span class="label label-info arrowed arrowed-in-right">
																<i class='icon-time bigger-110'>&nbsp;</i>
                                                                {{dateConvertUnixTimestampAndInGMTFormat activity.published }}
															</span>
														</span>
                                                        </td>
                                                    </tr>
                                                {{/each}}
                                            </table>

                                        </div>
                                        <!-- /widget-main -->
                                    </div>
                                </div>
                            </div>
                        {{/each}}

                    </div>
                    <!--/.page-content-->

                </div>
                <!-- End og Activity Tab-->
            </div>
        </div>
    </div>
</div>