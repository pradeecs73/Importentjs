<form class="form-search col-lg-6 col-lg-push-3 col-md-6 col-md-push-3 col-sm-8 col-sm-push-2 col-xs-12 expert-search">
    <div class="row">
        <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
            <div class="side-form-phrase">
                <span class="side-phrase-line side-phrase-thick">Find</span>
                <span class="side-phrase-line side-phrase-thin">An Expert</span>
            </div>
        </div>
        <div class="col-lg-10 col-md-10 col-sm-10 col-xs-12 form-wrap">
            <button class="btn search-button" type="submit" data-icon-before="search" {{action 'search'}}></button>
            <input type="text"
                   placeholder="Search by Name, Expertise etc."
                   class="form-control"
                   id="dashboard-search-box" {{action 'clearErrors' on='keyUp'}} {{action 'search' on='enter'}}/>
        </div>
    </div>
</form>