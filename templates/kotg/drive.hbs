<div class="page-content list-grid-page communities no-padding">
    <div {{ bind-attr class=":widget-body :list-with-tags isGridView:grid-view:list-view"}}>
        <div class="container header-panel">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <h1 class="eclipse-text" {{bind-attr title=pageTitle}}>{{pageTitle}}</h1>
                </div>
            </div>
        </div>

        <div class="filter-wrapper">
            <div class="filters-panel has-sorting">
                <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">
                    <div class="row">
                        <div id="view-option-buttons" class="col-lg-4 col-md-5 col-sm-4 col-xs-5 layout-buttons">
                            <a id="catalog-grid-view" {{ bind-attr class=":icon-grid-layout :pull-left isGridView:active" }} {{action toggleView "grid-view" target=view}}></a>
                            <a id="catalog-list-view" {{ bind-attr class=":icon-list-layout :pull-left isGridView::active" }} {{action toggleView "list-view" target=view}}></a>
                            {{sorting-link sortableFields=sortableFields sortBy=sortBy sortOrder=sortOrder updateSortByAction='updateSortBy' toggleSortOrderAction='toggleSortOrder'}}
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 search-add-wrap">
                    <div class="row">
                        <div class="col-lg-10 col-md-10 col-sm-10 form-wrap col-xs-10">
                            <div class="form-search">
                                <i class="icon-search" {{action 'search'}}></i>
                                {{input id="peopleSearchBox" class="form-control" value=searchBoxText placeholder="Search by file name" type="text" action='search' on='enter'}}
                            </div>
                        </div>
{{!--                        <span {{bind-attr class=":pull-right newPath:active"}}>
                            {{#link-to "myTests.add" (query-params from=routeName) data-toggle="tab" data-target="#communities-outlet"}} 
                            <span class="">
                                <i data-rel="tooltip" data-original-title="Add" data-placement="left" data-icon-before="plus-thin" class="btn"></i>
                            </span>
                            {{/link-to}}
                        </span>
--}}                        
                    </div>
                </div>
            </div>
        </div>

        {{#if model}}
        <div {{bindAttr class=":catalog isGridView:grid:list"}}>
            <div class="container header list-headings">
                <ul>
                    <li class="thumb"></li>
                    <li class="name"><h5>Name</h5></li>
                    <li class="actions"><h5>Actions</h5></li>
                </ul>
            </div> 
            <div class="widget-body-inner">
                <div class="widget-main clearfix">           
                  <ul class="communities items">
                    {{#if isGridView}}
                      {{#each model}}
                        <li {{bindAttr class=":withPopOver :col-sm-4 :col-md-4 :col-lg-3"}} data-rel="popover" data-container="body" data-toggle="popover" data-placement="auto right" data-original-title="" title="">
                          {{ view App.DriveGridView }}
                        </li>
                      {{/each}}
                    {{else}}
                      {{#each model}}
                          <li>
                            {{ view App.DriveListView }}
                          </li>
                      {{/each}}
                    {{/if}}
                  </ul>
              </div>
          </div>

        </div>
        {{else}}
        <div class="no-value"> No results found </div>
        {{/if}}

    </div>
</div>
<div id="download-window" style="display:none">
    <iframe id="download-frame" src="" width="1px" height="1px"></iframe>
</div>
{{outlet shareDocumentModalOutlet}}
