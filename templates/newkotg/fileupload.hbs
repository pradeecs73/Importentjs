<div class="modal fade in" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" id="fileuploadDialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header modal-create-header clearfix">
                <button type="button" class="close font-25" data-dismiss="modal" {{action clear}}>
                    <i class="icon-remove white"></i>
                </button>
                <h4 class="modal-title">File Upload</h4>
            </div>
            <div class="modal-body page-padding padding-bottom-10">
                {{#if error}}
                    <div class="alert alert-danger">{{error}}</div>
                {{/if}}
                {{#if uploading}}
                    <div class="progress progress-striped active">
                        <div class="progress-bar" {{bind-attr width=percentComplete}}></div>
                    </div>
                {{/if}}

                <div class="form-group clearfix">
                    <div class="col-md-1 no-padding-right align-right icon-file-plus" for="form-field" style="font-size:30px"></div>
                    <div class="col-md-11">
                        <div class="file-upload-form">
                            <input type="file" placeholder="" id="files" class="btn" {{bind-attr name=name}} {{action change on="change" target="view"}}/>
                            {{#if file}}
                                <span class="pull-left">
                                    <span class="inner-info">
                                        <span class="filename" {{bind-attr title=file.fileName}}>{{{ellipsis file.fileName 35}}}</span>
                                        <span class="file-size">{{file.fileSize}}</span>
                                    </span>
                                </span>
                            {{else}}
                                <span class="inner-text">No File(s) Chosen</span>
                            {{/if}}
                            <button type="file" class="btn btn-sm btn-primary pull-right" {{bind-attr class=disableClick}} {{action openFileChooser target="view"}}>
                                Choose File
                            </button>
                        </div>
                    </div>
                </div>

                <div class="clearfix space-2"></div>
                <div class="modal-footer">
                    <button type="button" {{bind-attr class=":btn :btn-sm :btn-danger xhr:mk-show:mk-hide"}} {{action cancel}}>Cancel</button>
                    <button type="button" {{bind-attr class=":btn :btn-sm :btn-primary uploading:mk-hide:mk-show"}} data-dismiss="modal" {{action clear}}>Cancel</button>
                    <button type="button" {{bind-attr class=":btn :btn-sm :btn-primary uploading:mk-hide:mk-show"}} {{action upload}}>Upload</button>
                </div>
            </div>
        </div>
    </div>
</div>
