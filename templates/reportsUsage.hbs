
<div id="user-activity" class="page-content user-profile-page">
    <div class="widget-body list-with-tags" id="profile-layout">
        {{#if allowed}}
            <div class="tab-content">
                <div id="dashboard" class="tab-pane in active" >
                    <div class="admin-filters-panel">
                        <div class="container">
                            <div class="row searchCatalogCustom list-grid-page">
                                <div id="messageDiv" class="alert alert-block">
                                    <p></p>
                                </div>
                                <div class="col-lg-8 col-md-8 col-sm-6 col-xs-12">
                                    <h4>Generate Report</h4>
                                    <div class="row">
                                        <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
                                            <button type="button" class="btn btn-info btn-xs" {{action 'generateReports' 'users' 'userpi' }}>
                                                Users Report
                                            </button>
                                        </div>
                                        <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
                                            <button type="button" class="btn btn-info btn-xs" {{action 'generateReports' 'usersActivity' 'userpi' }}>
                                                User Activity Report
                                            </button>
                                        </div>
                                        {{#if preferences.KC}}
                                            <div class="col-lg-5 col-md-5 col-sm-5 col-xs-5">
                                                <button type="button"
                                                        class="btn btn-info btn-xs" {{action 'generateReports' 'StorageUtilization' 'contentstore'}}>
                                                    Storage Utilization Report
                                                </button>
                                            </div>
                                        {{/if}}
                                        <div class="col-lg-1 col-md-1 col-sm-1 col-xs-1">
                                            <button type="button" class="btn btn-info btn-xs" {{action 'refreshModel'}}>
                                                Refresh
                                            </button>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="admin-ui">
                        <div class="widget-body no-border" id="admin-lists">
                            <div class="tab-pane expertise-tab" id="expertise-list">
                                <div class="admin-header-panel list-headings">
                                    <div class="row">
                                        <div class="col-1">
                                            <h5>Report Name </h5>
                                        </div>
                                        <div class="col-4">
                                            <h5>Report Date</h5>
                                        </div>
                                        <div class="col-4">
                                            <h5>Generated By</h5>
                                        </div>
                                        <div class="col-5">
                                            <h5>Download Report</h5>
                                        </div>
                                    </div>
                                </div>
                                <!--/list-headings-->
                                <div class="widget-body-inner">
                                    <div class="widget-main clearfix">
                                        <div id="expertise-topics" class="list-container">
                                            {{#each report}}
                                                <div class="item-wrap expertise-item-wrap">
                                                    <div class="item-inner-wrap">
                                                        <div class="item-inner-content">
                                                            <div class="row clearfix">
                                                                <div class="col-1">
                                                                    <span class="info-label">Report Name</span>

                                                                    <p class="item-name eclipse-text">{{type}}</p>
                                                                </div>
                                                                <div class="col-3">
                                                                    <span class="info-label">Report Date</span>

                                                                    <p class="item-updated-date">{{formatDate generatedOn "MMMM DD, YYYY HH:mm:ss"}}</p>
                                                                </div>
                                                                <div class="col-4">
                                                                    <span class="info-label">Generated By</span>

                                                                    <p class="item-updated-date">{{who}}</p>
                                                                </div>
                                                                <div class="col-5">
                                                                    <span class="info-label">Download Report</span>

                                                                    <button type="button" class="btn btn-info btn-xs" {{action 'downloadReport' type}}>
                                                                        Download Report
                                                                    </button>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            {{/each}}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                </div>
            </div>
        {{else}}
            <div class="tab-content">
                <div id="dashboard" class="tab-pane in active" >
                    <h3>You may not have permission to view this report</h3>
                    <h5>If you are looking for other kind of reports, please look at other tabs</h5>
                </div>
            </div>
        {{/if}}
        </div>
    </div>
</div>
