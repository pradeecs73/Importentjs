			<!-- ORGANIZATION filters -->
			<div class="tab-pane tab-filter-pane active" data-tab-content="summary" id="organizations">

				<div class="search-box">
					<button type="submit" data-icon-before="remove" class="btn autocomplete-close"></button>
					<input type="text" class="search-filters" id="narrow-organizations" placeholder="Narrow organizations..." />
				</div>

				<div class="tab-inner-wrap scroll-pane clearfix">

					{{view App.SidebarOrgView}}
					
				</div>		
			</div>

			<!-- LOCATION filters -->
			<div class="tab-pane tab-filter-pane" id="locations">

				<div class="search-box">
					<button type="submit" data-icon-before="remove" class="btn autocomplete-close"></button>
					<input type="text" class="search-filters" id="narrow-locations" placeholder="Narrow locations..." />
				</div>

				<div class="tab-inner-wrap scroll-pane clearfix">

					{{view App.SidebarLocationsView}}

				</div>
			</div>

			<!-- TITLE filters -->
			<div class="tab-pane tab-filter-pane" id="jobtitles">

				<div class="search-box">
					<button type="submit" data-icon-before="remove" class="btn autocomplete-close"></button>
					<input type="text" class="search-filters" id="narrow-jobtitles" placeholder="Narrow job titles..." />
