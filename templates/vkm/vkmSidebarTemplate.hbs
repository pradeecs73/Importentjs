	<!-- Topic Content -->
	<div class="vkm-topic-wrap" id="topic-wrap" data-topic-view="overview">

		<!-- Topic Header -->
		<div class="topic-content-header">
			
			<div class="topic-content-heading">
				<h2></h2>
			</div>	
		
			<div class="topic-content-subheading">
				<h2 data-icon-before=""></h2>

				<div class="search-box topic-search-box">
					<!-- search form wrapper for instant search through results ... same code as filters -->
				</div>
			</div>
		

		</div>

		<!-- Topic Slider (toggles between overview and full content) -->
		<div class="topic-slides-outer">

			<div class="tab-shadow"></div>

			<!-- Topic Overview/Preview Contents -->
			<div class="topic-slide topic-content-overview" id="topic-slide-overview">
				
						{{view App.SidebarCommunitiesView}}
						{{view App.SidebarCoursesView}}
						{{view App.SidebarDocumentsView}}
						{{view App.SidebarBlogsView}}
						{{view App.SidebarWikisView}}
						{{view App.SidebarForumsView}}
			</div>
			

			<!-- Topic Full Contents -->
			<div class="topic-slide topic-content-full" id="topic-slide-full">
				</div>

		</div>


