<div class="sub-panel-content-inner sub-panel-available">
	<h5><a href="javascript:void(0)">Forums <span class="panel-forum-counter-assets
	">({{assetsForumsCount}})</span></a></h5>

	<div class="sub-panel-list-wrap slide-wrapper" id="forums-slider">
		<div class="slider-controls">
    		<a href="javascript:void(0)" class="icon-caret-left slider-nav-left disabled"></a>
    		<a href="javascript:void(0)" class="icon-caret-right slider-nav-right disabled"></a>	
		</div>
		<div class="sub-panel-list sub-forums-list slider-contents">

			<div class="slider-inner-contents" id="slider-inner-forum">
				{{#if topicAssetsForums}}
					{{#each forum in topicAssetsForums}}
		    			<div class="knowledge-asset-item" id="knowledge-asset-forum">
		    				<div class="knowledge-item-inner">
		    					<div class="asset-summary clearfix">
		    						<a class="asset-title" href="#/question/{{unbound forum.assetURL}}"><h5>{{forum.assetTitle}}</h5></a>
		    						<p class="asset-decription">{{forum.authorName}}</p>
		    					</div>
		    					<ul class="asset-info">
		    						<li class="asset-date">
		    							<i class="icon-clock"></i>
		    							<span class="asset-date time">{{forum.creationDate}}</span>
		    						</li>
		    						<li class="asset-interaction-info enabled">
						        		<ul>
						        			<li>
						        				{{#if forum.likesNo}}
						        					<a class="icon-thumbs-up asset-like" href="javascript:void(0)"> 
						        					<span class="like-counter">{{forum.likesNo}}</span></a>
						        				{{else}}
						        					<a class="icon-thumbs-up asset-like" href="javascript:void(0)"> 
						        					<span class="like-counter">0</span></a>
						        				{{/if}}
						        			</li>
						        			<li>
						        				{{#if forum.sharedNo}}
							        				<a class="asset-comment icon-arrow-share" href="javascript:void(0)">
							        				<span class="share-counter">{{forum.sharedNo}}</span></a>
							        			{{else}}
							        				<a class="asset-comment icon-arrow-share" href="javascript:void(0)">
						        					<span class="share-counter">0</span></a>
						        				{{/if}}
						        			</li>
						        			<li>
						        				{{#if forum.favoredNo}}
						        					<a class="icon-star asset-favorite" href="javascript:void(0)">
						        					<span class="favorite-counter">{{forum.favoredNo}}</span></a>
						        				{{else}}
						        					<a class="icon-star asset-favorite" href="javascript:void(0)">
						        					<span class="favorite-counter">0</span></a>
						        				{{/if}}
						        			</li>
						        		</ul>
		    						</li>
		    					</ul>
		    				</div>
		    			</div>
	    			{{/each}}
    			{{else}}
    				<div class="missing-data-message">
                       <p class="error-message"><em>No Forums to display</em></p>
					</div>
				{{/if}}
    			
    		</div>

		</div>

	</div>
</div>