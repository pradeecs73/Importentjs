<!--Top Panel -->
<div class="vkm-top-panel-wrap clearfix">

	<div class="vkm-top-panel vkm-top-panel-left">

		<!-- Search Topics -->
		
		<div class="vkm-search-wrap">
			<form class="vkm-search-form" id="searchTopicsForm">
				<div class="form-search">
					<button type="reset" data-icon-before="search" class="btn vkm-search-button"></button>
					<input type="text" id="searchTopicsInput" autocomplete="on" class="form-control search-topics-input" placeholder="Search Topics">
					<div class="instant-search-results">
						
					</div>

					<div id="searchError" class="popover fade bottom in" style="display: none;">
						<div class="arrow"></div>
						<div class="popover-content error">Please enter at least 3 valid characters.</div>
					</div>
				</div>
			</form>								
		</div>
	</div>

	<!-- Category Tabs -->
	<div class="vkm-top-panel vkm-top-panel-right ">

		<!-- Nav tabs -->
		<ul class="nav nav-tabs vkm-side-tabs hide" role="tablist">
