<div class="modal shareModal" id="deletePost" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close white" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel"> {{modalTitle}}</h4>
              </div>
              <div class="modal-body">
                <div class="col-sm-12">
                  <div class="padding-10">
                    <span class="grey" id="deletePostMessage">{{confirmMessage}}</span>
                  </div>
                </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-primary" data-dismiss="modal"> NO </button>
                <a href="javascript:;" {{action deletePost target="view"}}><button type="button" class="btn btn-sm btn-primary"  data-dismiss="modal" id="deletePostButton"> YES</button>
                </a>
              </div>
            </div>
          </div>
</div>