<div class="timeline-label">
    <span class="label label-primary arrowed-in-right label-lg">
      <b>Today</b>
    </span>
</div>

<div class="timeline-items">
        <div class="timeline-item clearfix">
              <div class="timeline-info">
                {{avatarMini actor.displayName actor.id}}
                <span class="label label-info label-sm">{{formatDate published "hh:mm"}}</span>
              </div>

              <div class="widget-box transparent">
                      <div class="widget-header widget-header-small">
                          <h5 class="smaller">
                              <a href="#" class="blue">{{authorName}}</a>
                              <span class="grey">{{title}}</span>
                          </h5>

                          <span class="widget-toolbar no-border">
                            <i class="icon-time bigger-110"></i>
                            {{formatDate published "hh:mm"}}
                          </span>

                          <span class="widget-toolbar">
                              <a href="#" data-action="reload">
                                <i class="icon-refresh"></i>
                              </a>

                              <a href="#" data-action="collapse">
                                <i class="icon-chevron-up"></i>
                              </a>
                          </span>
                      </div>

                      <div class="widget-body">
                          <div class="widget-main">
                                {{!-- Anim pariatur cliche reprehenderit, enim eiusmod
                                <span class="red">high life</span>

                                accusamus terry richardson ad squid &hellip;
                                <div class="space-6"></div> --}}

                                <div class="widget-toolbox clearfix">
                                    <div class="pull-left">
                                    <i class="icon-hand-right grey bigger-125"></i>
                                    {{#link-to pathName object.id class="bigger-110"}}Click to read &hellip;{{/link-to}}
                                </div>

                                <div class="pull-right action-buttons">
                                    <a href="#">
                                      <i class="icon-ok green bigger-130"></i>
                                    </a>

                                    <a href="#">
                                      <i class="icon-pencil blue bigger-125"></i>
                                    </a>

                                    <a href="#">
                                      <i class="icon-remove red bigger-125"></i>
                                    </a>
                                </div>
                          </div>
                      </div>
              </div>
        </div>
</div>